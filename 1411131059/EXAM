#include <stdio.h>
#define ID 10
#define SIZE 4

void sort(const char** name, int a[][SIZE], int size);
void swap(int* e1Ptr, int* e2Ptr);

int main(void)
{
    int i, j;
    const char* name[ID] = { "Alan",
                             "Ben",
                             "Candy",
                             "Derril",
                             "Elien",
                             "Freddy",
                             "Gary",
                             "Howard",
                             "Iris",
                             "Jason" };
    int a[ID][SIZE] = { {2,98,72,0},
                        {3,76,32,0},
                        {6,98,67,0},
                        {7,89,32,0},
                        {8,98,55,0},
                        {9,89,32,0},
                        {10,98,65,0},
                        {11,99,32,0},
                        {12,98,71,0},
                        {13,76,91,0}, };

    puts("Data items in original order");
    puts("");
    printf("%9s%6s%10s%11s\n", "Name:", "ID", "Score", "Averages");
    puts("");
    for (j = 0; j < ID; j++)
    {
        for (i = 1; i < SIZE - 1; ++i) {
            a[j][3] += a[j][i];
        }
        a[j][3] /= 2;
    }

    for (j = 0; j < ID; j++)
    {
        printf("%9s", name[j]);
        for (i = 0; i < SIZE; ++i) {
            printf("%6d", a[j][i]);
        }
        printf("\n");
    }
    puts("_________________________________________________________");
    sort(name, a, ID);
    puts("\nData items in ascending order");
    puts("");
    printf("%7s%9s%6s%10s%12s\n", "Rank","Name", "ID", "Score", "Averages");
    puts("");
    for (j = 0; j < ID; j++)
    {
        printf(" %4d. ", j + 1);
        printf("%9s", name[j]);
        for (i = 0; i < SIZE; ++i) {
            printf("%6d", a[j][i]);
        }
        printf("\n");
    }

    puts("");

    int mid = (0 + (ID - 1)) / 2;
    printf("\n  中位數: %4d\n", a[mid][3]);
    printf("  最高：");
    printf("%8s", name[0]);
    for (j = 0; j < SIZE; j++)
    {
        printf("%4d", a[0][j]);
    }
    printf("\n  最低：");
    printf("%8s", name[9]);
    for (j = 0; j < SIZE; j++)
    {
        printf("%4d", a[9][j]);
    }
    puts("");
}


void sort(const char** name, int a[][SIZE], int size)
{
    const char* ptr;
    int hold, pass, i;
    for (pass = 1; pass < size; ++pass) {

        // loop to control number of comparisons per pass   
        for (i = 0; i < size - pass; ++i) {

            // compare adjacent elements and swap them if first 
            // element is greater than second element           
            if (a[i][3] < a[i + 1][3]) {
                ptr = name[i];
                name[i] = name[i + 1];
                name[i + 1] = ptr;
                swap(&a[i][0], &a[i + 1][0]);
                swap(&a[i][1], &a[i + 1][1]);
                swap(&a[i][2], &a[i + 1][2]);
                swap(&a[i][3], &a[i + 1][3]);
            }
        }
    }

}

void swap(int* e1Ptr, int* e2Ptr)
{
    int hold;
    hold = *e1Ptr;
    *e1Ptr = *e2Ptr;
    *e2Ptr = hold;
}

