#include <stdio.h>
#define ID 10
#define SIZE 4

void sort(const char** name, int a[][SIZE], int size);
void swap(int* e1Ptr, int* e2Ptr);

int main(void)
{
    int  j;
    struct student
    {
        char name[ID];
        unsigned int stu_id;
        float math;
        float com;
        float avg;
    };

    typedef struct student  STUDENT;
    STUDENT stu, stu_class[ID] = { {"Alan", 2,98,72,0},
                                   {"Ben", 3,76,32,0},
                                   {"Candy", 6,98,67,0},
                                   {"Derril",7,89,32,0},
                                   {"Elien", 8,98,55,0},
                                   {"Franklin", 9,89,32,0},
                                   {"Gary", 10,98,65,0},
                                   {"Howard", 11,99,32,0},
                                   {"Iris", 12,98,71,0},
                                   {"Jason", 13,76,91,0} };


    puts("Data items in original order");
    printf("%8s%4s%8s%8s%14s\n", "Name:", "ID", "MATH","COM","Averages");
    for (j = 0; j < ID; j++)
    {
        stu_class[j].avg = (stu_class[j].math + stu_class[j].com) / 2;
    }

    for (j = 0; j < ID; j++)
    {
        printf("%8s", stu_class[j].name);
        printf("%4d", stu_class[j].stu_id);
        printf("    %.2f", stu_class[j].math);
        printf("    %.2f", stu_class[j].com);
        printf("    %.2f", stu_class[j].avg);
        printf("\n");
    }
}
