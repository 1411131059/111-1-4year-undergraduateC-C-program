#include<stdio.h>
#define SIZE 10

void sort(int pp[], int rel[], int size);
int search(int a[], int id);

int main(void)
{
	int a[SIZE] = { 2,6,4,8,10,12,89,68,45,37 },ID,j;
	int c[SIZE] = { 66,67,66,70,73,74,75,75,62,32 };
	
	puts("Data items in original order");

	for (int i = 0; i < SIZE; ++i)
	{
		printf("%4d", a[i]);
	}
	puts("");
	for (int i = 0; i < SIZE; ++i)
	{
		printf("%4d", c[i]);
	}

	sort(a, c, SIZE);

	puts("\nData items in ascending order");

	for (int i = 0; i < SIZE; ++i)
	{
		printf("%4d", a[i]);
	}
	puts("");
	for (int i = 0; i < SIZE; ++i)
	{
		printf("%4d", c[i]);
	}

	printf("\nInput student ID");
	scanf_s("%d", &ID);
	j = search(a, ID);
	if (j>=9)
	{
		printf("Student %d not found!", ID);
	}
	else
	{
		printf("Student %d got %d!", a[j], c[j]);
	}
}

void sort(int pp[], int rel[], int size)
{
	int hold;
	for (unsigned int pass = 1; pass < size; ++pass)
	{
		for (int i = 0; i < size-pass ; ++i)
		{
			if (rel[i] > rel[i + 1])
			{
				hold = rel[i];
				rel[i] = rel[i + 1];
				rel[i + 1] = hold;
				hold = pp[i];
				pp[i] = pp[i + 1];
				pp[i + 1] = hold;
			}
		}
	}
}

int search(int a[], int id)
{
	int i;
	for ( i = 0; i < SIZE; i++)
	{
		if (id == a[i])
		{
			return i;
		}
		else
		{
			i++;
		}
	}
	return i;
}
