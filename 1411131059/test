#include <stdio.h>
#define RESPONSES_SIZE 40
#define FREQUENCY_SIZE 11

void resp(int a[], int resp_size);
void freq(int b[], int freq_size);

int main(void)
{  
   int frequency[FREQUENCY_SIZE] = {0};
   
   int responses[RESPONSES_SIZE] = {1, 2, 6, 4, 8, 5, 9, 7, 8, 10,
        1, 6, 3, 8, 6, 10, 3, 8, 2, 7, 6, 5, 7, 6, 8, 6, 7, 5, 6, 6, 
        5, 6, 7, 5, 6, 4, 8, 6, 8, 10};

	resp(responses, RESPONSES_SIZE);

	printf("%s%17s\n", "Rating", "Frequency");
   
	freq(frequency, FREQUENCY_SIZE);
}

void resp(int a[], int resp_size)
{
	for (int answer = 0; answer < resp_size; ++answer)
	{
      ++frequency[a[answer]];
	} 	
}

void freq(int b[], int freq_size)
{
   for (int rating = 1; rating < freq_size; ++rating) 
   {
      printf("%6d%17d\n", rating, b[rating]);
   } 
}
